# http://EditorConfig.org

root = true

[*]
# Use Unix line endings
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.py]
indent_size = 4

[*.{json,y{a,}ml}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
indent_size = 2

[{Makefile,**.mk}]
# Makefiles require tabs
indent_style = tab
